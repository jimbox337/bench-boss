// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model PendingUser {
  id                        String    @id @default(cuid())
  username                  String    @unique
  email                     String    @unique
  name                      String
  password                  String    // bcrypt hashed
  verificationToken         String    @unique
  verificationExpires       DateTime
  createdAt                 DateTime  @default(now())
}

model User {
  id                        String    @id @default(cuid())
  username                  String    @unique
  email                     String    @unique
  name                      String
  password                  String    // bcrypt hashed
  role                      String    @default("user") // user or admin
  profilePicture            String?   // URL to profile picture
  emailVerified             DateTime? // When email was verified
  emailVerificationToken    String?   @unique
  emailVerificationExpires  DateTime?
  resetPasswordToken        String?   @unique
  resetPasswordExpires      DateTime?
  createdAt                 DateTime  @default(now())
  updatedAt                 DateTime  @updatedAt
  teams                     Team[]
}

model Team {
  id              String   @id @default(cuid())
  name            String
  platform        String   // ESPN, Yahoo, Custom, etc.
  logo            String?  // Team logo URL
  espnLeagueId    String?
  espnTeamId      String?
  espnS2          String?  // ESPN private league cookie
  swid            String?  // ESPN private league cookie
  seasonId        Int?     // ESPN season year
  isActive        Boolean  @default(true)
  roster          Json?    // Array of Player objects
  leagueSettings  Json?    // League scoring settings
  lastSyncedAt    DateTime? // Last time ESPN data was synced
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
